{
  "limits": {
    "daily": {
      "amount": 10.00,
      "currency": "USD",
      "action": "warn",
      "notification": "telegram"
    },
    "monthly": {
      "amount": 100.00,
      "currency": "USD", 
      "action": "throttle",
      "throttleModel": "openai/gpt-4o-mini",
      "notification": "telegram"
    },
